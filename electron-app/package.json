{
    "name": "snapit-desktop",
    "version": "1.0.0",
    "description": "SnapIt Desktop - Document capture and PDF creation app",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --enable-logging",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win"
    },
    "keywords": [
        "electron",
        "camera",
        "document",
        "pdf",
        "capture"
    ],
    "author": "Sonu Verma",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    },
    "build": {
        "appId": "com.sonuverma.snapit",
        "productName": "SnapIt",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "main.js",
            "preload.js",
            "../core/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon.png"
        },
        "dmg": {
            "title": "SnapIt ${version}",
            "icon": "build/icon.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
